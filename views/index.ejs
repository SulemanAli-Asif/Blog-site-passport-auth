<div class="author">
        <h1 class="author__heading">Welcome to the Landing Page HooperHub</h1>
        <p class="author__body">Made in Node.js and Express.js</p>
</div>

<img src="/img/markus-spiske-BfphcCvhl6E-unsplash.jpg" alt="">

<section class="article">
    <h2 class="article__heading">Latest Posts</h2>
    <ul class="article-ul">

        <% data.forEach(post => { %>
         
        <li>
            <a href="/post/<%= post._id %>">
                <span><%= post.title %></span>
                <span class="article-list__date"><%= post.createdAt.toDateString() %> </span>

            </a>
        </li>

        <% }) %>


    </ul>

    <% if (nextPage!==null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; View older List</a>

    <% } %>
</section>